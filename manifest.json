{
  "manifest_version": 3,
  "name": "Circle to Search",
  "version": "1.0.0",
  "description": "Circle anything on screen to get details or answers, similar to Google's Circle to Search feature",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Circle to Search"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
